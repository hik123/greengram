<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.green.greengram.feed.FeedMapper">
    <insert id="insFeed"
            useGeneratedKeys="true"
            keyProperty="ifeed"> <!--   /useGeneratedKeys >>마리아db mysql에서만 작동하는 속성  -->
        INSERT INTO t_feed
        SET iuser = #{iuser}
        , contents = #{contents}
        , location = #{location}
    </insert>


    <select id="selFeed">
        SELECT A.ifeed, A.contents, A.location, A.created_at AS CreatedAt,
        B.iuser, B.nm as writer
        FROM t_feed A
        INNER JOIN t_user B
        ON A.iuser = B.iuser
        ORDER BY ifeed DESC;
        LIMIT #{startIdx}, #{rowCount}
    </select>



    <!-- t_feed_pics -->
    <insert id="insFeedPic"> <!-- ifeed값 1개랑 문자열 여러개-->
        INSERT INTO t_feed_pics
        (ifeed, pic)
        VALUES
        <foreach collection="pics" item="pic" open="(" close=")" separator="),(">   <!-- --> <!--foreach문 for(String pic : pics) -->
            #{ifeed}, #{pic}
        </foreach>
    </insert>
</mapper>

